<Window x:Class="PDFd.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDF'd - Stop PDFing Around"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}"
                Padding="20">
            <StackPanel>
                <TextBlock Text="PDF'd" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"/>
                <TextBlock Text="Drop PDFs here or click to browse. Get PDF'd."
                           FontSize="14"
                           Foreground="{StaticResource SubtleTextBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Drop Zone -->
            <Border x:Name="DropZone"
                    Margin="20"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseLeftButtonUp="DropZone_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Rectangle StrokeDashArray="4 2"
                                                   Stroke="{StaticResource AccentBrush}"
                                                   StrokeThickness="2"
                                                   Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                                                   Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Border.Style>
                
                <Grid>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                x:Name="EmptyState">
                        <TextBlock Text="📄" 
                                   FontSize="48"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop PDFs here"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="or click to browse"
                                   FontSize="14"
                                   Foreground="{StaticResource SubtleTextBrush}"/>
                    </StackPanel>
                    
                    <!-- File List -->
                    <ScrollViewer x:Name="FileListContainer"
                                  Visibility="Collapsed"
                                  Margin="10">
                        <ItemsControl x:Name="FileList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1a1a1a"
                                            Margin="0,2"
                                            Padding="10"
                                            CornerRadius="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Status}"
                                                       Foreground="{StaticResource SuccessBrush}"
                                                       Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Action Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Options -->
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="ConvertOption"
                                 Content="Convert to Word"
                                 IsChecked="True"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextBrush}"
                                 Margin="0,0,20,0"/>
                    <RadioButton x:Name="CompressOption"
                                 Content="Compress"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextBrush}"/>
                </StackPanel>
                
                <!-- Process Button -->
                <Button Grid.Column="1"
                        x:Name="ProcessButton"
                        Content="Get PDF'd"
                        Padding="30,10"
                        FontSize="16"
                        IsEnabled="False"
                        Click="ProcessButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
