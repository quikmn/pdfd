<Window x:Class="PDFd.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDFd - PDF Processing"
        Background="#1a1a1a"
        Height="650" Width="1100"
        MinHeight="450" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Output Folder Setting -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="PDF'd" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Drop PDFs here or click to browse."
                                   FontSize="14"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Output Folder Setting -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="Output:" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="0,0,8,0"
                                   FontSize="12"/>
                        <Button x:Name="OutputFolderButton"
                                Content="Same as input"
                                Background="Transparent"
                                BorderBrush="{StaticResource SubtleTextBrush}"
                                BorderThickness="1"
                                Foreground="{StaticResource TextBrush}"
                                Padding="8,4"
                                FontSize="12"
                                Click="OutputFolderButton_Click"
                                ToolTip="Click to set custom output folder"/>
                        <Button x:Name="ClearOutputButton"
                                Content="✕"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource SubtleTextBrush}"
                                Padding="4,0"
                                FontSize="12"
                                Margin="4,0,0,0"
                                Visibility="Collapsed"
                                Click="ClearOutputButton_Click"
                                ToolTip="Clear custom output folder"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Drop Zone -->
            <Grid Grid.Row="1">
                <Border x:Name="DropZone"
                        Margin="20"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="#1a1a1a"
                        BorderThickness="2"
                        CornerRadius="8"
                        Cursor="Hand"
                        MouseLeftButtonUp="DropZone_Click">
                    
                    <Grid>
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    x:Name="EmptyState">
                            <TextBlock Text="📄" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Drop PDFs here"
                                       FontSize="20"
                                       FontWeight="Medium"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="or click to browse"
                                       FontSize="14"
                                       Foreground="{StaticResource SubtleTextBrush}"/>
                        </StackPanel>
                        
                        <!-- File List -->
                        <ScrollViewer x:Name="FileListContainer"
                                      Visibility="Collapsed"
                                      Margin="10">
                            <ItemsControl x:Name="FileList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1a1a1a"
                                                Margin="0,2"
                                                Padding="10"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Status}"
                                                           Foreground="{StaticResource SubtleTextBrush}"
                                                           Margin="10,0,0,0"
                                                           FontSize="12"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Action Bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceBrush}"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Options -->
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ConvertOption"
                                     Content="Convert to Word"
                                     IsChecked="True"
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource TextBrush}"
                                     Margin="0,0,20,0"/>
                        <RadioButton x:Name="CompressOption"
                                     Content="Compress"
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="FileCountLabel"
                                   Text=""
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource SubtleTextBrush}"
                                   Margin="20,0,0,0"
                                   FontSize="12"/>
                    </StackPanel>
                    
                    <!-- Process Button -->
                    <Button Grid.Column="1"
                            x:Name="ProcessButton"
                            Content="Process Files"
                            Padding="30,10"
                            FontSize="16"
                            IsEnabled="False"
                            Click="ProcessButton_Click"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- GridSplitter to resize panels -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Stretch"
                      Background="#2d2d2d"
                      Cursor="SizeWE"/>
        
        <!-- History Panel -->
        <Border Grid.Column="2"
                Background="#1a1a1a"
                BorderBrush="#2d2d2d"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- History Header -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="15,12">
                    <Grid>
                        <TextBlock Text="Recent Activity"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextBrush}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            
                            <Button Content="Clear"
                                    x:Name="ClearHistoryButton"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource SubtleTextBrush}"
                                    FontSize="11"
                                    Padding="4,2"
                                    Cursor="Hand"
                                    Click="ClearHistoryButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- History List -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="10">
                    <ItemsControl x:Name="HistoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2d2d2d"
                                        Margin="0,0,0,6"
                                        Padding="10"
                                        CornerRadius="4"
                                        ToolTip="{Binding FullDetails}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="{Binding StatusBrush}"
                                                       FontWeight="Bold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding TimeAgo}"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{StaticResource SubtleTextBrush}"
                                                       FontSize="10"/>
                                        </Grid>
                                        
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding FileName}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,4,0,2"/>
                                        
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Details}"
                                                   Foreground="{StaticResource SubtleTextBrush}"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- History Summary -->
                <Border Grid.Row="2"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="15,10">
                    <TextBlock x:Name="HistorySummary"
                               Text="No recent activity"
                               FontSize="11"
                               Foreground="{StaticResource SubtleTextBrush}"
                               TextAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>

